rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function emailKey(email) {
      return replace(lowercase(email), '\\.', ',');
    }

    function isAllowedEmail() {
      return exists(/databases/(default)/documents/allowlist/$(emailKey(request.auth.token.email)));
    }

    match /{allPaths=**} {
      allow read, write: if isSignedIn() && isAllowedEmail();
    }
  }
}
